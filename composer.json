{
    "name": "forme/framework",
    "description": "An MVC framework for WordPress.",
    "license": "MIT",
    "authors": [
        {
            "name": "Moussa Clarke",
            "email": "moussaclarke@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/yaml": "^6.0",
        "php-di/php-di": "^6.2",
        "symfony/string": "^6.0",
        "robmorgan/phinx": "^0.12.10",
        "illuminate/database": "^9.0",
        "illuminate/view": "^9.0",
        "ramsey/uuid": "^4.1",
        "monolog/monolog": "^2.1",
        "vlucas/phpdotenv": "^5.2",
        "laminas/laminas-diactoros": "^2.5",
        "http-interop/response-sender": "^1.0",
        "rareloop/psr7-server-request-extension": "^2.1",
        "altorouter/altorouter": "^2.0",
        "twig/twig": "^3.0",
        "league/plates": "^3.4",
        "relay/relay": "^2.1",
        "papertower/wp-rest-api-psr7": "^0.8.0",
        "log1x/sage-directives": "^1.1",
        "illuminate/config": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "Forme\\Framework\\": "src/"
        },
        "files": [
            "src/helpers.php",
            "src/View/Plates/Template/match.php",
            "src/View/Plates/Extension/Data/data.php",
            "src/View/Plates/Extension/Path/path.php",
            "src/View/Plates/Extension/RenderContext/func.php",
            "src/View/Plates/Extension/RenderContext/render-context.php",
            "src/View/Plates/Extension/LayoutSections/layout-sections.php",
            "src/View/Plates/Extension/Folders/folders.php",
            "src/View/Plates/Util/util.php"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4.0",
        "szepeviktor/phpstan-wordpress": "^1.0.2",
        "php-stubs/woocommerce-stubs": "^6.0",
        "php-stubs/acf-pro-stubs": "^5.9.9",
        "filp/whoops": "^2.14",
        "rector/rector": "^0.12.21",
        "php-stubs/wp-cli-stubs": "^2.6",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "scripts": {
        "stan": "./vendor/bin/phpstan",
        "rector:check": "./vendor/bin/rector process src --dry-run",
        "rector:fix": "./vendor/bin/rector process src",
        "cs:check": "./vendor/bin/php-cs-fixer fix --config ./.php-cs-fixer.dist --dry-run --diff",
        "cs:fix": "./vendor/bin/php-cs-fixer fix --config ./.php-cs-fixer.dist --diff"
    }
}
